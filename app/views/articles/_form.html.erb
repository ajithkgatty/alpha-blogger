<div class ="container">
<%= form_for @article, html: {class: "form"} do |f| %>
	<div class="form-group row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group row">
		<%= f.label :description %>
		<%= f.text_area :description,  class: "form-control" %>
	</div>

	<%= f.submit %>


<% end %>
</div>


